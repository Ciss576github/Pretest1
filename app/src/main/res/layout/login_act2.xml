<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_lightest"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        >

        <TextView
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/tv_register"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"
            android:text="Don't have an account? Sign up"
            android:textColor="@color/Black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/tv_skip"
            android:background="@drawable/background_border16"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="right"
            android:drawableRight="@drawable/ic_chevron_right_white_24dp"
            android:textColor="@color/White"
            android:text="SKIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:id="@+id/tv_appname"
            android:layout_centerHorizontal="true"
            android:src="@drawable/app_logo_pret3"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:textStyle="bold" />

<!--        android:src="@drawable/app_logo_gros2"-->


        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_1"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/tv_appname"
            android:textColor="@color/Black"
            android:text="The only 24 * 7 Emergency Service app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/tv_1"
            android:id="@+id/lay11"
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/lays1"
                android:padding="@dimen/_10sdp"
                android:layout_weight=".33"
                android:layout_width="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >


                <LinearLayout

                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_circular_imageview">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/admin_image"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@color/colorPrimary"
                        app:civ_shadow_radius="0" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Treatment from best doctors"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/lays2"
                android:padding="@dimen/_10sdp"

                android:layout_weight=".33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >


                <LinearLayout

                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_circular_imageview">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/admin_image"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@color/colorPrimary"
                        app:civ_shadow_radius="0" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Online appointment"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/lays3"
                android:padding="@dimen/_10sdp"

                android:layout_weight=".33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >


                <LinearLayout

                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_circular_imageview">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/admin_image"
                        app:civ_border_color="@color/Gray"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@color/colorPrimary"
                        app:civ_shadow_radius="0" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Exiciting deals and offers"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileCard"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="@dimen/_1sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight=".30"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:text="Login as :"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:gravity="center_vertical"
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:checked="false"
                        android:text="Patient"
                        android:paddingLeft="@dimen/_5sdp"

                        android:textColor="@color/Black"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/radioDoctor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight=".5"
                        android:checked="false"
                        android:text="Doctor"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_weight=".20"
                android:layout_height="0dp">

                <TextView
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:textColor="@color/Black"
                    android:layout_height="@dimen/_30sdp"/>



                <EditText
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight=".75"
                    android:background="@null"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingTop="8dp"
                    android:paddingRight="@dimen/dimen_10"
                    android:paddingBottom="8dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:padding="@dimen/_10sdp"
                    android:tint="@color/Black"
                    app:srcCompat="@drawable/ic_phone_android_black_24dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_weight=".20"
                android:layout_height="0dp">

                <TextView
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:textColor="@color/Black"
                    android:layout_height="@dimen/_30sdp"/>



                <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:background="@null"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    app:drawable_hide="@drawable/ic_visibile"
                    app:drawable_show="@drawable/ic_invisible"
                    app:tint_color="@color/textcolor" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:padding="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_lock_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_weight=".30"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Continue"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>