<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Act_languages">

    <RelativeLayout
        android:id="@+id/lay_top"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:id="@+id/lays"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_circular_imageview">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                app:civ_border_color="@color/Gray"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/colorPrimary"
                app:civ_shadow_radius="0" />

        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_c_lang"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lay_top"
        android:text="Choose Language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_c_lang"
        android:background="@drawable/background_border1"
        android:backgroundTint="@color/lightgrey"
        android:id="@+id/r1"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:id="@+id/lays1"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_circular_imageview">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_lang_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                app:civ_border_color="@color/Gray"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/colorPrimary"
                app:civ_shadow_radius="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_german"
            android:layout_toRightOf="@+id/lays1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_35sdp"
            android:padding="@dimen/_5sdp"
            android:text="German"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/Black" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/r1"
        android:background="@drawable/background_border1"
        android:backgroundTint="@color/lightgrey"
        android:id="@+id/r2"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:id="@+id/lays2"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_circular_imageview">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_lang_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                app:civ_border_color="@color/Gray"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/colorPrimary"
                app:civ_shadow_radius="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chines"
            android:layout_toRightOf="@+id/lays2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_35sdp"
            android:padding="@dimen/_5sdp"
            android:text="Chinese"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/Black" />

    </RelativeLayout>


</RelativeLayout>