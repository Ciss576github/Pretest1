    <style name="NavigationDrawerStyle">

        <item name="android:textSize">@dimen/_11sdp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/_35sdp</item>
        <item name="listPreferredItemHeightSmall">@dimen/_35sdp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">@dimen/_10sdp</item>
        <item name="listPreferredItemPaddingLeft">@dimen/_10sdp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">@dimen/_10sdp</item>
        <item name="listPreferredItemPaddingRight">@dimen/_10sdp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>


